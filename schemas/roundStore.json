{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "round": {
            "type": "object",
            "required": [
                "meta",
                "games"
            ],
            "properties": {
                "meta": {
                    "type": "object",
                    "required": ["name", "type"],
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "type": {
                            "$ref": "defs/round.json#/$defs/type"
                        }
                    }
                },
                "games": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/roundGame"
                    }
                }
            }
        },
        "roundGame": {
            "type": "object",
            "properties": {
                "stage": {
                    "type": "string"
                },
                "mode": {
                    "type": "string"
                }
            },
            "required": [
                "stage",
                "mode"
            ]
        }
    },
    "type": "object",
    "additionalProperties": {
        "$ref": "#/definitions/round"
    },
    "default": {
        "00000": {
            "meta": {
                "name": "Default Round 1",
                "type": "BEST_OF"
            },
            "games": [
                {
                    "stage": "MakoMart",
                    "mode": "Clam Blitz"
                },
                {
                    "stage": "Ancho-V Games",
                    "mode": "Tower Control"
                },
                {
                    "stage": "Wahoo World",
                    "mode": "Rainmaker"
                }
            ]
        }
    }
}
