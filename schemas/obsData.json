{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "required": ["status", "enabled"],
    "properties": {
        "enabled": {
            "type": "boolean"
        },
        "status": {
            "type": "string",
            "enum": ["CONNECTED", "CONNECTING", "NOT_CONNECTED"]
        },
        "scenes": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "inputs": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "uuid": {
                        "type": ["string", "null"]
                    },
                    "noVideoOutput": {
                        "type": "boolean"
                    }
                },
                "additionalProperties": false,
                "required": ["name", "noVideoOutput"]
            }
        },
        "currentScene": {
            "type": "string"
        },
        "gameplayScene": {
            "type": "string"
        },
        "gameplayInput": {
            "type": "string"
        },
        "intermissionScene": {
            "type": "string"
        }
    },
    "additionalProperties": false,
    "default": {
        "enabled": false,
        "status": "NOT_CONNECTED"
    }
}
