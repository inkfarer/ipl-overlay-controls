{
    "$schema": "http://json-schema.org/draft-07/schema",

    "definitions": {
        "caster": {
            "type": "object",
            "additionalProperties": false,
            "required": ["name", "twitter", "pronouns"],
            "properties": {
                "name": {
                    "type": "string"
                },
                "twitter": {
                    "type": "string"
                },
                "pronouns": {
                    "type": "string"
                },
                "imageUrl": {
                    "type": "string"
                }
            }
        }
    },

    "type": "object",
    "maxProperties": 3,
    "additionalProperties": {
        "$ref": "#/definitions/caster"
    },
    "default": {
        "aAa": {
            "name": "First Caster",
            "twitter": "@CasterFirst",
            "pronouns": "he/him"
        },
        "bBb": {
            "name": "Second Caster",
            "twitter": "@CasterSecond",
            "pronouns": "she/her"
        }
    }
}
