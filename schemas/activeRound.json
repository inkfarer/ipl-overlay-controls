{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "activeRoundTeam": {
            "allOf": [
                {
                    "$ref": "defs/team.json#/team"
                },
                {
                    "properties": {
                        "score": {
                            "type": "number"
                        },
                        "color": {
                            "type": "string",
                            "pattern": "^#([a-fA-F0-9]{6}|[a-fA-F0-9]{3})$"
                        }
                    },
                    "required": [
                        "score",
                        "color"
                    ]
                }
            ]
        }
    },
    "type": "object",
    "additionalProperties": false,
    "required": ["teamA", "teamB", "games", "activeColor", "match"],
    "properties": {
        "teamA": {
            "$ref": "#/definitions/activeRoundTeam"
        },
        "teamB": {
            "$ref": "#/definitions/activeRoundTeam"
        },
        "activeColor": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "index": {
                    "type": "number"
                },
                "title": {
                    "type": "string"
                },
                "categoryName": {
                    "type": "string"
                },
                "isCustom": {
                    "type": "boolean"
                }
            },
            "required": ["index", "title", "categoryName", "isCustom"]
        },
        "match": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "isCompleted": {
                    "type": "boolean"
                }
            },
            "required": ["id", "name", "isCompleted"]
        },
        "games": {
            "type": "array",
            "additionalItems": false,
            "items": {
                "type": "object",
                "properties": {
                    "winner": {
                        "type": "string",
                        "enum": [
                            "none",
                            "alpha",
                            "bravo"
                        ]
                    },
                    "stage": {
                        "type": "string"
                    },
                    "mode": {
                        "type": "string"
                    },
                    "color": {
                        "type": "object",
                        "allOf": [
                            {
                                "$ref": "defs/color.json#/color"
                            },
                            {
                                "properties": {
                                    "colorsSwapped": {
                                        "type": "boolean"
                                    }
                                },
                                "required": [
                                    "colorsSwapped"
                                ]
                            }
                        ]
                    }
                },
                "required": [
                    "winner",
                    "stage",
                    "mode"
                ]
            }
        }
    },
    "default": {
        "teamA": {
            "id": "AAA",
            "name": "Placeholder Team A",
            "score": 0,
            "color": "#37FC00",
            "showLogo": true,
            "players": [
                {
                    "name": "Player 1"
                },
                {
                    "name": "Player 2"
                }
            ]
        },
        "teamB": {
            "id": "BBB",
            "name": "Placeholder Team B",
            "score": 0,
            "color": "#7D28FC",
            "showLogo": true,
            "players": [
                {
                    "name": "Player 3"
                },
                {
                    "name": "Player 4"
                }
            ]
        },
        "activeColor": {
            "index": 0,
            "title": "Green vs Grape",
            "categoryName": "Ranked Modes",
            "isCustom": false
        },
        "match": {
            "id": "00000",
            "name": "Default Match 1",
            "isCompleted": false
        },
        "games": [
            {
                "winner": "none",
                "color": {
                    "index": 0,
                    "title": "Green vs Grape",
                    "clrA": "#37FC00",
                    "clrB": "#7D28FC",
                    "categoryName": "Ranked Modes",
                    "colorsSwapped": false,
                    "isCustom": false
                },
                "stage": "MakoMart",
                "mode": "Clam Blitz"
            },
            {
                "winner": "none",
                "color": {
                    "index": 1,
                    "title": "Green vs Magenta",
                    "clrA": "#04D976",
                    "clrB": "#D600AB",
                    "categoryName": "Ranked Modes",
                    "colorsSwapped": false,
                    "isCustom": false
                },
                "stage": "Ancho-V Games",
                "mode": "Tower Control"
            },
            {
                "winner": "none",
                "color": {
                    "index": 2,
                    "title": "Turquoise vs Orange",
                    "clrA": "#10E38F",
                    "clrB": "#FB7B08",
                    "categoryName": "Ranked Modes",
                    "colorsSwapped": false,
                    "isCustom": false
                },
                "stage": "Wahoo World",
                "mode": "Rainmaker"
            }
        ]
    }
}
