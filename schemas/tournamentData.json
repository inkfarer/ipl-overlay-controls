{
    "$schema": "http://json-schema.org/draft-07/schema",

    "type": "object",
    "properties": {
        "meta": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "source": {
                    "type": "string",
                    "default": "None"
                },
                "name": {
                    "type": "string"
                },
				"stages": {
					"description": "Stage/Bracket ID used by provider",
					"type": ["array", "null"],
					"items": {
						"type": "object",
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "Name of stage/bracket"
                            },
                            "id": {
                                "type": "string",
                                "description": "ID of stage/bracket"
                            },
                            "bracketType": {
                                "type": "string",
                                "description": "The bracket type, swiss|elimination etc"
                            }
                        }
                    },
					"default": null
				}
            },
            "required": ["id", "source"]
        },
        "data": {
            "type": "array",
            "items": {
                "$ref": "defs/team.json#/team"
            }
        }
    },
    "additionalItems": true,
    "default": {
        "meta": {
            "id": "No ID",
            "source": "None",
            "name": "No tournament"
        },
        "data": [
            {
                "id": "AAA",
                "name": "Placeholder Team A",
                "players": [
                    {
                        "name": "Player 1"
                    },
                    {
                        "name": "Player 2"
                    }
                ]
            },
            {
                "id": "BBB",
                "name": "Placeholder Team B",
                "players": [
                    {
                        "name": "Player 3"
                    },
                    {
                        "name": "Player 4"
                    }
                ]
            }
        ]
    }
}
