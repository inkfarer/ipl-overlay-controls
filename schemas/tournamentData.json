{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "required": ["meta", "teams"],
    "additionalProperties": false,
    "properties": {
        "meta": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "type": "string"
                },
                "source": {
                    "type": "string",
                    "enum": ["SMASHGG", "BATTLEFY", "UPLOAD", "UNKNOWN"]
                },
                "sourceSpecificData": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "smashgg": {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "tournamentId": {
                                    "type": "number"
                                },
                                "streams": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "defs/smashggStreams.json#/streams"
                                    }
                                },
                                "eventData": {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "properties": {
                                        "id": {
                                            "type": "number"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "game": {
                                            "type": "string"
                                        }
                                    },
                                    "required": ["id", "name", "game"]
                                }
                            },
                            "required": ["tournamentId", "eventData"]
                        }
                    }
                },
                "name": {
                    "type": "string"
                },
                "shortName": {
                    "type": "string"
                },
                "url": {
                    "type": "string"
                }
            },
            "required": ["id", "source", "shortName"]
        },
        "teams": {
            "type": "array",
            "items": {
                "$ref": "defs/team.json#/team"
            }
        },
        "stages": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["name", "id", "type"],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "id": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string",
                        "enum": ["SWISS", "SINGLE_ELIMINATION", "DOUBLE_ELIMINATION", "ROUND_ROBIN", "LADDER"]
                    }
                }
            }
        }
    },
    "default": {
        "meta": {
            "id": "No ID",
            "source": "UNKNOWN",
            "name": "No tournament",
            "shortName": "An Unknown Tournament"
        },
        "teams": [
            {
                "id": "AAA",
                "name": "Placeholder Team A",
                "showLogo": true,
                "players": [
                    {
                        "name": "Player 1"
                    },
                    {
                        "name": "Player 2"
                    }
                ]
            },
            {
                "id": "BBB",
                "name": "Placeholder Team B",
                "showLogo": true,
                "players": [
                    {
                        "name": "Player 3"
                    },
                    {
                        "name": "Player 4"
                    }
                ]
            }
        ]
    }
}
