{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "additionalProperties": false,
    "required": ["teamA", "teamB", "games", "round", "showOnStream"],
    "properties": {
        "teamA": {
            "$ref": "defs/team.json#/team"
        },
        "teamB": {
            "$ref": "defs/team.json#/team"
        },
        "round": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "type": {
                    "$ref": "defs/round.json#/$defs/type"
                }
            },
            "required": ["id", "name", "type"]
        },
        "showOnStream": {
            "type": "boolean"
        },
        "games": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "stage": {
                        "type": "string"
                    },
                    "mode": {
                        "type": "string"
                    }
                },
                "required": [
                    "stage",
                    "mode"
                ]
            }
        }
    },
    "default": {
        "teamA": {
            "id": "AAA",
            "name": "Placeholder Team A",
            "showLogo": true,
            "players": [
                {
                    "name": "Player 1"
                },
                {
                    "name": "Player 2"
                }
            ]
        },
        "teamB": {
            "id": "BBB",
            "name": "Placeholder Team B",
            "showLogo": true,
            "players": [
                {
                    "name": "Player 3"
                },
                {
                    "name": "Player 4"
                }
            ]
        },
        "round": {
            "id": "11111",
            "name": "Default Round 2",
            "type": "BEST_OF"
        },
        "showOnStream": false,
        "games": [
            {
                "stage": "Inkblot Art Academy",
                "mode": "Turf War"
            },
            {
                "stage": "MakoMart",
                "mode": "Tower Control"
            },
            {
                "stage": "Wahoo World",
                "mode": "Rainmaker"
            }
        ]
    }
}
