{
    "compilerOptions": {
        "allowJs": true,
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es6",
        "lib": [
            "esnext",
            "dom",
            "dom.iterable"
        ],
        "types": [
            "webpack-env",
            "jest"
        ],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "moduleResolution": "Node",
        "baseUrl": ".",
        "paths": {
            "types/*": [
                "src/types/*"
            ],
            "schemas": [
                "src/types/schemas/index"
            ],
            "@i18n/*": [
                "src/helpers/i18n/*"
            ]
        }
    },
    "include": [
        "src/dashboard/**/*.ts",
        "src/types/**/*.ts",
        "**/*.vue",
        "node_modules/@nodecg/types/augment-window.d.ts"
    ],
    "exclude": [
        "**/jest.config.ts",
        "**/__mocks__/**/*.ts"
    ]
}
