{
    "compilerOptions": {
        "allowJs": true,
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es5",
        "lib": [
            "esnext",
            "dom",
            "dom.iterable"
        ],
        "types": [
            "webpack-env"
        ],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "moduleResolution": "Node",
        "baseUrl": ".",
        "paths": {
            "nodecg/*": [
                "../../types/*"
            ],
            "replicants/*": [
                "src/types/schemas/*"
            ],
            "types/*": [
                "src/types/*"
            ]
        }
    }
}
